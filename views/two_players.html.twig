<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="styles.css" type="text/css">
        <title>RPS</title>
    </head>
    <body>
        <div class="container text-center">
            <h1>Rock Paper Scissors</h1>
            {% if whose_turn == "player 1" %}
            <div id="p1">
                <h4>Player 1's Turn</h4>
                <form action="/p1_selected">
                    <label class="radio-inline">
                      <input type="radio" name="p1Selection" id="rockP1" value="Rock" checked> Rock
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="p1Selection" id="paperP1" value="Paper"> Paper
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="p1Selection" id="scissorsP1" value="Scissors"> Scissors
                    </label>

                    <button type="submit" class="btn btn-primary">Confirm</button>
                </form>
            </div>
            {% endif %}
            {% if whose_turn == "player 2" %}
            <div id="p2">
                <h4>Player 2's Turn</h4>
                <form action="/p2_selected">
                    <label class="radio-inline">
                      <input type="radio" name="p2Selection" id="rockP2" value="Rock" checked> Rock
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="p2Selection" id="paperP2" value="Paper"> Paper
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="p2Selection" id="scissorsP2" value="Scissors"> Scissors
                    </label>
                    <button type="submit" class="btn btn-success">Confirm</button>
                </form>
            </div>
            {% endif %}
            {% if whose_turn == "finished" %}
            <h3>Player 1 chose {{rps.getPlayer1}}.
            <h3>Player 2 chose {{rps.getPlayer2}}.
            <h2>The winner is:</h2>
            <h1>{{rps.getWinner}}</h1>
            <a href="/two_players"><button type="submit" class="btn btn-success">Restart</button></a>
            <a href="/"><button type="submit" class="btn btn-danger">Home</button></a>
            {% endif %}
        </div>
    </body>
</html>
